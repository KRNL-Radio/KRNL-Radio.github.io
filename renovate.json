{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeSchedule": [
        "before 2am"
      ],
      "schedule": [
        "every weekday"
      ]
      "ignoreTests": true
    }
  ]
}
